<manifest package="com.lapism.searchview.sample"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
  >

  <uses-permission android:name="android.permission.RECORD_AUDIO"/>

  <application
    android:allowBackup="true"
    android:fullBackupContent="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppThemeLight"
    >

    <activity
      android:name=".activity.ToolbarActivity"
      android:label="@string/app_name"
      android:launchMode="standard"
      android:theme="@style/LauncherAppTheme"
      >
      <intent-filter tools:ignore="GoogleAppIndexingWarning">
        <action android:name="android.intent.action.VIEW"/>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".activity.MenuItemActivity"
      android:label="@string/app_name"
      />

    <activity
      android:name=".activity.ToggleActivity"
      android:label="@string/app_name"
      />

    <activity
      android:name=".activity.AboutActivity"
      android:label="@string/app_name"
      />

    <activity
      android:name=".activity.ResultActivity"
      android:label="@string/app_name"
      android:launchMode="singleTop"
      android:parentActivityName=".activity.ToolbarActivity"
      tools:ignore="UnusedAttribute"
      />

  </application>

</manifest>